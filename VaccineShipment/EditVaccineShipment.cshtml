@model VaccineShipment
@{
    ViewData["Title"] = "Edit Vaccine Shipment";
}

<h3>@ViewData["Title"]</h3>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="VaccineShipment" asp-action="EditVaccineShipment" method="post">
    
    @Html.HiddenFor(m => m.VaccineShipmentID)

    <div class="form-group">
        <label>Shipment Start Date</label>
        <input asp-for="StartDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Shipment End Date</label>
        <input asp-for="EndDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose Vaccine Type</label>
        <select asp-for="VaccineID" class="form-control">
            <option value="1">Pfizer</option>
            <option value="2">Moderna</option>
            <option value="3">Johnson and Johnson</option>

        </select>

    </div>


    <div class="form-group">
        <label>Choose Name of Facility</label>
        <select asp-for="FacilityID" asp-items="ViewBag.AllFacilities" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label>Number Of Vaccines Shipped</label>
        <input asp-for="NumberOfVaccinesShipped" class="form-control" />
    </div>

    <div class="form-group">
        <label>Number Of Vaccines Used</label>
        <input asp-for="NumberOfVaccinesUsed" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Edit Vaccine Shipment</button>
</form>