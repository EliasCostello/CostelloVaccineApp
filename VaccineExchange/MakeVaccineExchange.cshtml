@model MakeVaccineExchangeViewModel
@{
    ViewData["Title"] = "Make Vaccine Exchange";
}

<h3>Make Vaccine Exchange</h3>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="VaccineExchange" asp-action="MakeVaccineExchange" method="post">

    <div class="form-group">
        <label>Vaccine Exchange Date</label>
        <input asp-for="ExchangedDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Vaccine Exchanged Doses</label>
        <input asp-for="ExchangedDoses" class="form-control" />
    </div>

    <div class="form-group">
        <label>Choose Vaccine Type</label>
        <select asp-for="VaccineID" class="form-control">
            <option value="1">Pfizer</option>
            <option value="2">Moderna</option>
            <option value="3">Johnson and Johnson</option>

        </select>

    </div>


    <div class="form-group">
        <label>Choose Name of Sending Facility</label>
        <select asp-for="SendingFacilityID" asp-items="ViewBag.AllFacilities" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label>Choose Name of Receiving Facility</label>
        <select asp-for="ReceivingFacilityID" asp-items="ViewBag.AllFacilities" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Make Vaccine Exchange</button>
</form>